# index definition for index bt_build_code_output

curl -X PUT "localhost:9200/bt_build_code_output?pretty" -H 'Content-Type: application/json' -d'
{
  "mappings": {
    "properties": {
      "id": {
        "type": "integer"
      },
      "bt_build_id": {
        "type": "integer"
      },
      "bt_test_version_id": {
        "type": "integer"
      },
      "output": {
        "type": "text"
      },
      "create_date": {
        "type": "date"
      }
    }
  },
  "settings": {
    "number_of_shards": 3,
    "number_of_replicas": 1
  }
}
'
